/*
 *= require reset
 *= require_self
 *
 *= depend_on_asset "powered-by.png"
 */

@import "bourbon";

* {
 box-sizing: border-box;
}

body {
  background: #FAFAFC;
  padding: 0 0 0 320px;
  font: 16px/1 $helvetica;
  text-rendering: optimizeLegibility;
  font-feature-settings: "kern";
  font-kerning: normal;
  -webkit-font-smoothing: antialiased;
  -webkit-font-feature-settings: "kern";
  -moz-font-feature-settings: "kern";
  -moz-font-feature-settings: "kern=1";
}

.wf-active {
  body {
    font-family: "proxima-nova", $helvetica;
  }
}

a {
  text-decoration: none;
}

#sidebar {
  @include position(fixed, 0 null 0 0);

  background: #FFF;
  color: #555;
  width: 320px;
  padding: 0 0 110px;
  border-right: 2px solid #EAECF2;

  & > header {
    text-align: center;

    a {
      padding: 16px 0;
      border-bottom: 2px solid #EAECF2;
      display: block;
    }

    h1 {
      color: #428BCA;
      font-size: 22px;
      font-weight: 800;
      text-transform: uppercase;
    }

    p {
      color: #999;
      font-size: 14px;
      font-weight: 600;
      letter-spacing: 0.25px;
    }
  }
}

#player {
  @include position(absolute, null 0 0 0);

  height: 110px;
  padding: 16px;
  border-top: 2px solid #EAECF2;

  header {
    @include clearfix;

    h1 {
      padding: 8px 0;
      font-size: 14px;
      font-weight: 600;
      overflow: hidden;
      white-space: nowrap;
      text-overflow: ellipsis;
    }

    p {
      font-size: 12px;
      font-weight: 400;

      a {
        color: #999;

        &:hover {
          color: #428BCA;
        }
      }
    }

    .artwork {
      background: #EAECF2;
      margin: 0 8px 0 0;
      border-radius: 4px;
      float: left;
    }
  }

  .tip {
    @include position(relative, 50% null null 50%);

    font-size: 14px;
    display: inline-block;
    cursor: default;

    p {
      @include position(relative, 50% null null -50%);
      @include transform(translateY(-50%));

      color: #555;
      padding: 0 0 0 32px;
      line-height: 16px;

      span {
        @include position(absolute, -2px null null 0);

        background: #5CB85C;
        color: #FFF;
        padding: 4px 4px 3px 5px;
        border-radius: 4px;
        font-size: 12px;
        font-weight: 700;
        line-height: 12px;
        text-transform: uppercase;
        display: inline-block;
      }
    }
  }

  section {
    @include clearfix;

    padding: 16px 0 0 0;

    .bar,
    .position,
    .remaining {
      float: left;
    }

    .bar {
      background: #EEE;
      width: 206px;
      margin: 2px 0;

      &,
      span {
        height: 6px;
        border-radius: 4px;
        display: block;
      }

      span {
        background: lighten(#428BCA, 20%);
        width: 0;
      }
    }

    .loading,
    .position,
    .remaining {
      font-size: 12px;
      text-align: center;
      display: block;
    }

    .position,
    .remaining {
      width: 40px;
      letter-spacing: 0.75px;
    }
  }
}

#content {
  width: 800px;
  padding: 16px;

  .group {
    padding: 16px;

    & + .group {
      margin-top: 16px;
    }

    h1 {
      color: #444;
      margin: 0 0 8px 0;
      font-size: 22px;
      font-weight: 700;
      text-transform: uppercase;

      time {
        color: #999;
        margin: 0 0 0 8px;
        font-size: 16px;
        font-weight: 400;
        text-transform: none;
      }
    }

    ul {
      background: #FFF;
      border: 2px solid #EAECF2;
      border-radius: 4px;
      overflow: hidden;

      li {
        color: #000;
        padding: 16px;
        border-bottom: 1px solid #EAECF2;
        font-size: 18px;
        font-weight: 600;
        line-height: 24px;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
        cursor: pointer;

        &:hover,
        &.active {
          background: lighten(#428BCA, 45%);
        }

        &:last-child {
          border: 0;
        }

        &.active {
          .play,
          .pause {
            fill: #428BCA;
          }
        }

        .play,
        .pause {
          width: 24px;
          margin: 0 14px 0 0;
          float: left;
        }

        .play {
          fill: #999;
        }
      }
    }
  }
}

footer {
  width: 800px;
  padding: 32px 0;

  a {
    background: url(<%= asset_data_uri("powered-by.png") %>) no-repeat;
    background-size: 78px 24px;
    margin: 0 auto;
    width: 78px;
    height: 24px;
    text-indent: -8192px;
    display: block;
    opacity: 0.33;

    &:hover {
      opacity: 1;
    }
  }
}
