 *= require reset
 *= require_self
 *
 *= depend_on_asset "powered-by.png"
 */

@import "bourbon";
@import "variables";
@import "player";

* {
 box-sizing: border-box;
}

body {
  background: $background;
  padding: 0 0 0 $sidebar-width;
  font: 16px/1 $helvetica;
  text-rendering: optimizeLegibility;
  font-feature-settings: "kern";
  font-kerning: normal;
  -webkit-font-smoothing: antialiased;
  -webkit-font-feature-settings: "kern";
  -moz-font-feature-settings: "kern";
  -moz-font-feature-settings: "kern=1";
}

.wf-active {
  body {
    font-family: "proxima-nova", $helvetica;
  }
}

a {
  text-decoration: none;
}

#sidebar {
  @include position(fixed, 0 null 0 0);

  background: $foreground;
  color: $text;
  width: $sidebar-width;
  padding: 0 0 $player-height 0;
  border-right: $border-width solid $border;

  & > header {
    text-align: center;

    a {
      padding: $padding 0;
      border-bottom: $border-width solid $border;
      display: block;
    }

    h1 {
      color: $text-bright;
      font-size: 22px;
      font-weight: 800;
      text-transform: uppercase;
    }

    p {
      color: $text-dull;
      font-size: 14px;
      font-weight: 600;
      letter-spacing: 0.25px;
    }
  }
}

#content {
  width: 960px;
  padding: $padding;

  .group {
    padding: $padding;

    & + .group {
      margin-top: $padding;
    }

    h1 {
      color: $text;
      margin: 0 0 8px 0;
      font-size: 22px;
      font-weight: 700;
      text-transform: uppercase;

      time {
        color: $text-dull;
        margin: 0 0 0 8px;
        font-size: 16px;
        font-weight: 400;
        text-transform: none;
      }
    }

    ul {
      background: $foreground;
      border: $border-width solid $border;
      border-radius: $border-radius;
      overflow: hidden;

      li {
        color: darken($text, 25%);
        padding: $padding;
        border-bottom: $border-width / 2 solid $border;
        font-size: 18px;
        font-weight: 600;
        line-height: 24px;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
        cursor: pointer;

        &:hover,
        &.active {
          background: lighten($text-bright, 45%);
        }

        &:last-child {
          border: 0;
        }

        &.active {
          .play,
          .pause {
            fill: $text-bright;
          }
        }

        .byline {
          color: $text;
          font-weight: 400;
        }

        .play,
        .pause {
          width: 24px;
          margin: 0 14px 0 0;
          float: left;
        }

        .play {
          fill: $text-dull;
        }
      }
    }
  }
}

footer {
  width: 800px;
  padding: 32px 0;

  a {
    background: url(<%= asset_data_uri("powered-by.png") %>) no-repeat;
    background-size: 78px 24px;
    margin: 0 auto;
    width: 78px;
    height: 24px;
    text-indent: -8192px;
    display: block;
    opacity: 0.33;

    &:hover {
      opacity: 1;
    }
  }
}
